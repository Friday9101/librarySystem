@model IEnumerable<NEWLIBRARY.Models.BOOKS>

@{
    ViewBag.Title = "Books";
}


<div class="container ">

    @using (Html.BeginForm())
    {
    
        <div class="form-row form-ro ">

             
            <div class="form-group col-md-4">
                <p>the system load @@ <span>@DateTime.Now.ToLongTimeString() </span></p>
            </div>



            <div class="form-group col-md-8">

                <div class="form-row ">


                    <div class="form-group col-md-5">

                        <div class="form-row ">


                            <div class="form-group col-md-10">

                                <input class="form-control" type="text" name="Search_Data" placeholder="Search">
                            </div>

                            <div class="form-group col-md-2">

                                <button value="Search_Data" class="btn btn-success" type="submit">Search</button>

                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </div>

    
    


    
    

        <!-- ======= Testimonials Section ======= -->
        <section id="testimonials" class="testimonials section-bg">
            <div class="container-fluid">

                <div class="section-title">
                    <h2>AllBook</h2>

                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>

                    <h2>Our newly added <span>Books</span></h2>
                    @*<p>You can go to book section to view all the books.</p>*@
                </div>



                <div class="row justify-content-center">
                    <div class="col-xl-10">


                        <div class="row">






                            @{
                        




        foreach (var item in Model)
        {

            //int n = k.Next(1, 11);
                                <div class="col-lg-6">
                                    <div class="testimonial-item">

                                        <img src="@Url.Content(item.book_img)" class="testimonial-img" alt="@item.BOOK_NAME">


                                        <h3>@Html.ActionLink(item.BOOK_NAME, "Details", new { id = item.ID })</h3>

                                        <h4>@item.DEPARTMENT</h4>

                                        <h4>@item.Copies copies</h4>

                                        <p class="overflowTest">
                                            @item.Comment
                                        </p>
                                    </div>
                                </div>
                                <!-- End testimonial-item -->



        }
                        
                            }



                        </div>



                    </div>
                </div>







            </div>
        </section>
        <!-- End Testimonials Section -->


    

    
    
    
    }
</div>

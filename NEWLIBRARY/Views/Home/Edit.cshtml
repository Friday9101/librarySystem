@model NEWLIBRARY.Models.BOOKS

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Sheared/ADminEdit_LayOut.cshtml";
    //Layout = "~/Views/Sheared/otherLayout.cshtml";
}



@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
       
    <div>
        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container-fluid">

                <div class="row justify-content-center">


                    <div class="col-xl-10">
                        <h2>@Model.BOOK_NAME Details</h2>
                    </div>
                </div>

            </div>
        </section>
        <!-- End Breadcrumbs -->

        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
            <div class="container-fluid">

                <div class="row justify-content-center">
                    <div class="col-xl-10">

                        <div class="row">

                            <div class="col-lg-5">





                                <div class="row">

                                    <div class="col-lg-5">
                                        <span class="h6">@Html.ValidationMessageFor(model => model.imgFile)<br />
                                        </span>Front of the book : 
                                    </div>

                                    <div class="col-lg-7">

                                        <span>
                                            <br />
                                            <input type="file" name="imgFile"  value="@Model.book_img" />
                                        </span>
                                    </div>
                                </div>




                                <div class="row">

                                    <div class="col-lg-5">
                                        <span class="h6">@Html.ValidationMessageFor(model => model.imgFile2)<br />
                                        </span>Back of the book :  
                                    </div>

                                    <div class="col-lg-7">

                                        <span>
                                            <br />
                                            <input type="file" name="imgFile2" value="@Model.book_img2"/>
                                        </span>
                                    </div>
                                </div>




                                <div class="row">

                                    <div class="col-lg-5">
                                        <span class="h6">@Html.ValidationMessageFor(model => model.imgFile3)<br />
                                        </span>Other images : 
                                    </div>

                                    <div class="col-lg-7">

                                        <span>
                                            <br />
                                            <input type="file" name="imgFile3"  value="@Model.book_img3"  />
                                        </span>
                                    </div>
                                </div>






                                <p class="h6">@ViewBag.errorextension</p>
                                <br />





                                <div class="owl-carousel portfolio-details-carousel">
                                    <img src="@Url.Content(Model.book_img)" class="img-fluid" alt="1">
                                    <img src="@Url.Content(Model.book_img2)" class="img-fluid" alt="img 2">
                                    <img src="@Url.Content(Model.book_img3)" class="img-fluid" alt="img 3">
                                </div>


                                <p>
                                    @Html.ActionLink("Back To Details", "Details", new { id = Model.ID }) |
                                @Html.ActionLink("Back To All Books", "AllBook", new { id = Model.ID }) |
                                </p>



                            </div>




                            <div class="col-lg-7 portfolio-info">


                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.BOOK_NAME)</strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.BOOK_NAME)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.BOOK_NAME)

                                        </div>


                                    </div>

                                </div>

                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.DEPARTMENT) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.DEPARTMENT)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.DEPARTMENT)

                                        </div>

                                    </div>
                                </div>


                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.AuthorName) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.AuthorName)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.AuthorName)

                                        </div>

                                    </div>
                                </div>


                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.BookID) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.BookID)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.BookID)

                                        </div>

                                    </div>
                                </div>

                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.Copies) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.Copies)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.Copies)

                                        </div>

                                    </div>
                                </div>


                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.CopyRightYear) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.CopyRightYear)

                                        <div class="row h6">

                                            @Html.ValidationMessageFor(model => model.CopyRightYear)
                                        </div>

                                    </div>
                                </div>

                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.MadeIn) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.MadeIn)
                                        <div class="row h6">

                                            @Html.ValidationMessageFor(model => model.MadeIn)
                                        </div>


                                    </div>
                                </div>


                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.PublisherYear) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.PublisherYear)

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.PublisherYear)

                                        </div>

                                    </div>
                                </div>

                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.VERSION) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @Html.EditorFor(model => model.VERSION)
                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.VERSION)
                                        </div>
                                    </div>
                                </div>


                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.Comment) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @*@Html.TextAreaFor(model => model.Comment)*@
                                        <textarea rows="6" cols="30" name="Comment" id="Comment">  @Model.Comment  </textarea>

                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.Comment)
                                        </div>
                                    </div>
                                </div>

                                <br />
                                <div class="row">

                                    <div class="col-lg-3">
                                        <strong>@Html.DisplayNameFor(model => model.PREVIEW) </strong>
                                    </div>

                                    <div class="col-lg-9">
                                        @*@Html.TextAreaFor(model => model.PREVIEW)*@
                                        <textarea rows="6" cols="30" name="PREVIEW" id="PREVIEW">  @Model.PREVIEW  </textarea>
                                        <div class="row h6">
                                            @Html.ValidationMessageFor(model => model.PREVIEW)
                                        </div>

                                    </div>
                                </div>



                                <span class="rightt">
                                    <input type="submit" value="Save" class="linkedit" />
                                    @*<button type="submit" name="EDIT" value="EDIT">DONE</button>*@
                                </span>


                            </div>



                        </div>

                    </div>
                </div>

            </div>
        </section>
        <!-- End Portfolio Details Section -->
    </div>

}
